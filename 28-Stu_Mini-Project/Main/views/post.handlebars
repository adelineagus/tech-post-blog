<div class="text-center">
  <h2>{{title}}</h2>


  <p>{{postText}}</p>
  <p>Created by {{user.email}} on {{format_date date_created}}</p>
  {{#if logged_in}}
  <div class="col-md-4">
        <button id= "delete-post" class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
  </div>
    <div class="col-md-4">
      <h4><a href="/updatepost/{{id}}">update post</a></h4>
  </div>
</div>
{{/if}}



{{#if comments.length}}
  <div class="col-md-6" id="post-list">
    <h3>Current comments:</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <p>
        {{comment.commentText}}
      </p>

      <p>Created by {{user.email}} on {{format_date date_created}}</p>
    </div>
    {{/each}}
  </div>
{{/if}}
<div>

{{#if logged_in}}
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Comment:</h3>

    <form class="form" id= "new-comment-form">
      <div class="form-group">
        <label for="comment-text">text:</label>
        <textarea class="form-input" id="comment-text" name="comment-text"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
  {{/if}}


<script src="/js/comment.js"></script>
<script src="/js/deletepost.js"></script>