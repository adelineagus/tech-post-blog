<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form" id="login_form">
      <div class="form-group">
        <label for="email_login">email:</label>
        <input class="form-input" type="text" id="email_login" />
      </div>
      <div class="form-group">
        <label for="password_login">password:</label>
        <input class="form-input" type="password" id="password_login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form" id="signup_form">
      <div class="form-group">
        <label for="email_signup">email:</label>
        <input class="form-input" type="text" id="email_signup" />
      </div>
      <div class="form-group">
        <label for="password_signup">password:</label>
        <input class="form-input" type="password" id="password_signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
